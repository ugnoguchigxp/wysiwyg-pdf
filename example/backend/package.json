    "deploy:all": "bun run build:frontend && wrangler deploy"
  },
  "dependencies": {
    "drizzle-orm": "^0.44.4",
    "hono": "^4.9.10"
  },
  "devDependencies": {
    "@cloudflare/workers-types": "^4.20251231.0",
    "@types/bun": "^1.3.5",
    "wrangler": "^4.54.0"
  }
}