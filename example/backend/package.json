{
  "name": "backend",
  "private": true,
  "version": "0.0.0",
  "type": "module",
  "scripts": {
    "dev": "bun --watch src/index.ts",
    "start": "bun src/index.ts",
    "deploy": "wrangler deploy",
    "dev:cf": "wrangler dev",
    "db:init": "wrangler d1 execute DB --file=d1-schema.sql",
