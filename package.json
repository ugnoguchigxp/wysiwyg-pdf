{
  "name": "wysiwyg-pdf",
  "version": "0.1.2",
  "description": "React + Konva WYSIWYG editor toolkit for print-ready (A4 portrait/landscape) templates in the browser.",
  "homepage": "https://github.com/ugnoguchigxp/wysiwyg-pdf#readme",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/ugnoguchigxp/wysiwyg-pdf.git"
  },
  "bugs": {
    "url": "https://github.com/ugnoguchigxp/wysiwyg-pdf/issues"
  },
  "keywords": [
    "react",
    "konva",
    "wysiwyg",
    "editor",
    "template",
    "pdf",
    "print",
    "a4"
  ],
  "author": "Yuji Noguchi",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    },
    "./styles.css": "./dist/index.css",
    "./print.css": "./dist/konva-editor/styles/print.css"
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "engines": {
    "node": ">=18.18"
  },
  "packageManager": "pnpm@10.24.0",
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "pnpm run clean && tsup && cd src && cpy \"features/**/*.css\" ../dist --parents && cpy \"global.d.ts\" ../dist",
    "lint": "biome lint src --max-diagnostics=50",
    "lint:fix": "biome check --write src",
    "format": "biome format --write src tsup.config.ts package.json biome.json .gitignore README.md",
    "format:check": "biome format src tsup.config.ts package.json biome.json .gitignore README.md",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "coverage": "pnpm exec vitest run --coverage",
    "pack:dry": "npm pack --dry-run --ignore-scripts --cache .npm-cache",
    "verify": "pnpm run format:check && pnpm run lint && pnpm run typecheck && pnpm run build && pnpm run test && pnpm run coverage && pnpm run pack:dry",
    "prepublishOnly": "pnpm run verify",
    "prepare": "pnpm run build",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "exceljs": "^4.4.0",
    "konva": "^10.0.12",
    "lucide-react": "^0.470.0",
    "perfect-freehand": "^1.2.2",
    "react-colorful": "^5.6.1",
    "react-konva": "^19.2.1",
    "tailwind-merge": "^2.6.0",
    "use-image": "^1.1.4",
    "zod": "^3.25.76"
  },
  "peerDependencies": {
    "pptxgenjs": "^3.12.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "peerDependenciesMeta": {
    "pptxgenjs": {
      "optional": true
    }
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@testing-library/user-event": "^14.6.1",
    "@types/node": "^24.2.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.0",
    "@vitest/coverage-v8": "^3.2.4",
    "cpy-cli": "^6.0.0",
    "dompurify": "^3.2.4",
    "jsdom": "^26.0.0",
    "pptxgenjs": "^3.12.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "vitest": "^3.0.0"
  }
}
