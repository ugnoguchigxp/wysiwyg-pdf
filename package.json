{
  "name": "wysiwyg-pdf",
  "version": "0.0.2",
  "description": "React + Konva WYSIWYG editor toolkit for print-ready (A4 portrait/landscape) templates in the browser.",
  "keywords": [
    "react",
    "konva",
    "wysiwyg",
    "editor",
    "template",
    "pdf",
    "print",
    "a4"
  ],
  "author": "Yuji Noguchi",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js",
      "require": "./dist/index.cjs"
    }
  },
  "files": [
    "dist"
  ],
  "sideEffects": [
    "**/*.css"
  ],
  "license": "MIT",
  "publishConfig": {
    "access": "public"
  },
  "scripts": {
    "clean": "rimraf dist",
    "typecheck": "tsc -p tsconfig.json --noEmit",
    "build": "pnpm run clean && tsup && cpy \"features/**/*.css\" dist --cwd=src --parents && cpy \"global.d.ts\" dist --cwd=src",
    "lint": "eslint .",
    "lint:fix": "eslint . --fix",
    "format": "biome format --write src eslint.config.js tsup.config.ts package.json biome.json .gitignore README.md",
    "format:check": "biome format src eslint.config.js tsup.config.ts package.json biome.json .gitignore README.md",
    "test": "pnpm exec vitest run",
    "test:watch": "pnpm exec vitest",
    "coverage": "pnpm exec vitest run --coverage",
    "pack:dry": "npm pack --dry-run --cache .npm-cache",
    "verify": "pnpm run build && pnpm run test && pnpm run coverage && pnpm run pack:dry",
    "prepublishOnly": "pnpm run verify",
    "prepare": "pnpm run build",
    "prepack": "pnpm run build"
  },
  "dependencies": {
    "@radix-ui/react-dialog": "^1.1.4",
    "@radix-ui/react-dropdown-menu": "^2.1.16",
    "@radix-ui/react-popover": "^1.1.15",
    "@radix-ui/react-select": "^2.2.6",
    "@radix-ui/react-slot": "^1.1.1",
    "@radix-ui/react-tooltip": "^1.2.0",
    "@tanstack/react-table": "^8.21.3",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "konva": "^10.0.12",
    "lucide-react": "^0.470.0",
    "react-i18next": "^15.2.0",
    "react-konva": "^19.2.1",
    "tailwind-merge": "^2.6.0",
    "use-image": "^1.1.4"
  },
  "peerDependencies": {
    "react": "^19.2.3",
    "react-dom": "^19.2.3"
  },
  "devDependencies": {
    "@biomejs/biome": "^2.3.8",
    "@eslint/js": "^9.39.1",
    "@testing-library/jest-dom": "^6.6.3",
    "@testing-library/react": "^16.1.0",
    "@vitest/coverage-v8": "^3.2.4",
    "@types/node": "^24.2.1",
    "@types/react": "^19.2.2",
    "@types/react-dom": "^19.2.0",
    "cpy-cli": "^6.0.0",
    "eslint": "^9.39.1",
    "eslint-plugin-react": "^7.37.5",
    "eslint-plugin-react-hooks": "^7.0.1",
    "globals": "^16.5.0",
    "jsdom": "^26.0.0",
    "react": "^19.2.3",
    "react-dom": "^19.2.3",
    "rimraf": "^6.0.1",
    "tsup": "^8.5.0",
    "typescript": "^5.9.2",
    "typescript-eslint": "^8.49.0",
    "vitest": "^3.0.0"
  }
}